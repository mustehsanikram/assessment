@model IEnumerable<Assessment.Models.TaskModel>

<p>
	@Html.ActionLink("Add New", "AddTask")
</p>
<table class="table">
	<tr>
		<th>
			@Html.DisplayNameFor(model => model.TaskId)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Title)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Description)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.DueDate)
		</th>
		<th></th>
	</tr>

	@foreach (var item in Model)
	{
		<tr>
			<td>
				@Html.DisplayFor(modelItem => item.TaskId)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Title)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Description)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.DueDate)
			</td>
			<td>
				@Html.ActionLink("Edit", "Edit", new { id = item.TaskId }) |
				@Html.ActionLink("Delete", "DeleteTask", new { id = item.TaskId }, new { onclick = "return confirm('Are sure wants to delete?');" })

			</td>
		</tr>
	}

</table>
  